<% provide(:title, "Profile") %>
<h1>Profile</h1>
<!-- user profile info container -->
<div class="container py-5">
    <div class="card">
        <h3><%= current_user.email %></h3>
        <%= link_to 'Edit Profile', edit_user_registration_url(current_user) %>
    </div>
</div>
<!-- book list container -->
<h2>Your Reading History List</h2>
<div>
    <% @books.each do |book| %>
        <div class="container py-5">
            <div class="card flex-row row-col-changeable">
                <img src=<%= book.img %> class="fluid-image cont-img">
                <div class="card-body w-100">
                    <h3><%= book.title %></h3>
                    <h4 class="author-color"><%= book.author %></h4>
                    <h6>Your rating: <%= book.rating.nil? ? '[Not rated]' : book.rating %></h6>
                    <%= link_to 'Edit Rating', edit_book_path(book) %>
                </div>
            </div>
        </div>
    <% end %>
</div>
